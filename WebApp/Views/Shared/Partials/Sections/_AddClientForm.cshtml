@model AddClientForm

<div id="addClientModal" class="modalz">
  <div class="modalz-content">

    <div class="modalz-header">
      <h3>Add Client</h3>
      <button class="btn-closedz" data-close="true">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>

    <form class=".formzz" novalidate method="post" asp-action="AddClient" asp-controller="Clients">
     
      <div class="image-previewer circle">
        <img src="" class="image-preview" />
        <input asp-for="ClientImage" accept="image/*" class="hide" />
      </div>
      
      <div class="form-group">
        <label asp-for="ClientName"></label>
        <div class="field-group">
          <input asp-for="ClientName" />
          <span asp-validation-for="ClientName"></span>
        </div>
      </div>

      <div class="form-group">
        <label asp-for="Email"></label>
        <div class="field-group">
          <input asp-for="Email" />
          <span asp-validation-for="Email"></span>
        </div>
      </div>

      <div class="form-group">
        <label asp-for="Location"></label>
        <div class="field-group">
          <input asp-for="Location" />
          <span asp-validation-for="Location"></span>
        </div>
      </div>

      <div class="form-group">
        <label asp-for="Phone"></label>
        <div class="field-group">
          <input asp-for="Phone" />
          <span asp-validation-for="Phone"></span>
        </div>
      </div>

      <button type="submit" class="btn btn-blue btn-submit">Create</button>
    </form>

  </div>
</div>