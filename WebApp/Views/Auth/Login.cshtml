@model MemberLoginForm
@{
  Layout = "_CleanLayout";
  ViewData["Title"] = "Login";
}

<section id="login">
  <form asp-controller="Auth" asp-action="Login" method="post" novalidate enctype="multipart/form-data"> 

    <h1 class="h1z">@ViewData["Title"]</h1>

    <div class="form-group">
      <label asp-for="Email"></label>
      <input asp-for="Email"/>
      <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
      <label asp-for="Password"></label>
      <input asp-for="Password" />
      <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-blue">Log In</button>
    </div>
  </form>

  <div class="form-footer">
    <span>Don't have an account?</span>
    <a class="form-footer-a" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
  </div>

</section>